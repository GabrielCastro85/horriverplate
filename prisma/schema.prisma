generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// =========================================
// ENUMS
// =========================================
//

enum SeasonAwardCategory {
  artilheiro
  assistente
  melhor_jogador
  melhor_goleiro
  melhor_zagueiro
  melhor_meia
  melhor_atacante
}

//
// =========================================
// MODELS
// =========================================
//

//
// ADMIN (login do painel)
//
model Admin {
  id           Int    @id @default(autoincrement())
  email        String @unique
  passwordHash String
}

//
// JOGADORES
//
model Player {
  id       Int     @id @default(autoincrement())
  name     String
  nickname String?
  position String
  photoUrl String?

  // Totais para rankings
  totalGoals   Int   @default(0)
  totalAssists Int   @default(0)
  totalMatches Int   @default(0)
  totalPhotos  Int   @default(0)
  totalRating  Float @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  stats          PlayerStat[]
  weeklyAwards   WeeklyAward[]  @relation("WeeklyBest")
  monthlyAwards  MonthlyAward[] @relation("MonthlyCraque")
  seasonAwards   SeasonAward[]
  voteLinks      VoteLink[]
  votesGiven     Vote[]         @relation("VoteVoter")
  votesAsGoalkeeper Vote[]      @relation("VoteBestGoalkeeper")
  votesAsDefender   Vote[]      @relation("VoteBestDefender")
  votesAsMidfielder Vote[]      @relation("VoteBestMidfielder")
  votesAsForward    Vote[]      @relation("VoteBestForward")
  votesAsOverall    Vote[]      @relation("VoteBestOverall")
}

//
// PELADAS / PARTIDAS
//
model Match {
  id          Int      @id @default(autoincrement())
  playedAt    DateTime
  description String?
  winnerTeam  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  stats        PlayerStat[]
  weeklyAwards WeeklyAward[] @relation("WeeklyMatch")
  voteLinks    VoteLink[]
  votes        Vote[]
}

//
// ESTATÍSTICA POR JOGADOR EM CADA PELADA
//
model PlayerStat {
  id       Int @id @default(autoincrement())
  playerId Int
  matchId  Int

  present         Boolean @default(false)
  goals           Int     @default(0)
  assists         Int     @default(0)
  rating          Float?
  appearedInPhoto Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  player Player @relation(fields: [playerId], references: [id])
  match  Match  @relation(fields: [matchId], references: [id])

  @@unique([playerId, matchId])
}

//
// CRAQUE + TIME DA SEMANA
//
model WeeklyAward {
  id Int @id @default(autoincrement())

  // Semana (data de início)
  weekStart DateTime @unique

  // Foto do time da semana
  teamPhotoUrl String?

  // Craque da semana
  bestPlayerId Int?
  bestPlayer   Player? @relation("WeeklyBest", fields: [bestPlayerId], references: [id])

  // Pelada / time destaque
  winningMatchId Int?
  winningMatch   Match? @relation("WeeklyMatch", fields: [winningMatchId], references: [id])

  createdAt DateTime @default(now())
}

//
// CRAQUE DO MÊS
//
model MonthlyAward {
  id    Int @id @default(autoincrement())
  month Int
  year  Int

  craqueId Int?
  craque   Player? @relation("MonthlyCraque", fields: [craqueId], references: [id])

  createdAt DateTime @default(now())

  @@unique([month, year])
}

//
// PREMIAÇÃO DA TEMPORADA
// (Melhor jogador, artilheiro, assistente, etc.)
//
model SeasonAward {
  id       Int                  @id @default(autoincrement())
  year     Int
  category SeasonAwardCategory
  playerId Int?
  featuredOnHome Boolean @default(false)
  createdAt DateTime @default(now())

  player   Player? @relation(fields: [playerId], references: [id])

  // Garante que só exista 1 prêmio por Ano + Categoria
  @@unique([year, category], name: "year_category")
}

//
// LINKS ÚNICOS DE VOTAÇÃO (por jogador e pelada)
//
model VoteLink {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  matchId   Int
  playerId  Int
  usedAt    DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  match  Match  @relation(fields: [matchId], references: [id])
  player Player @relation(fields: [playerId], references: [id])
  vote   Vote?  @relation("VoteToken")

  // Um link por jogador em cada pelada
  @@unique([matchId, playerId])
}

//
// VOTOS REGISTRADOS (uma submissão por token)
//
model Vote {
  id                Int      @id @default(autoincrement())
  matchId           Int
  voterId           Int?
  tokenId           Int?     @unique
  bestGoalkeeperId  Int?
  bestDefenderId    Int?
  bestMidfielderId  Int?
  bestForwardId     Int?
  bestOverallId     Int?
  submittedAt       DateTime @default(now())

  match          Match    @relation(fields: [matchId], references: [id])
  voter          Player?  @relation("VoteVoter", fields: [voterId], references: [id])
  token          VoteLink? @relation("VoteToken", fields: [tokenId], references: [id])
  bestGoalkeeper Player? @relation("VoteBestGoalkeeper", fields: [bestGoalkeeperId], references: [id])
  bestDefender   Player? @relation("VoteBestDefender", fields: [bestDefenderId], references: [id])
  bestMidfielder Player? @relation("VoteBestMidfielder", fields: [bestMidfielderId], references: [id])
  bestForward    Player? @relation("VoteBestForward", fields: [bestForwardId], references: [id])
  bestOverall    Player? @relation("VoteBestOverall", fields: [bestOverallId], references: [id])
}
