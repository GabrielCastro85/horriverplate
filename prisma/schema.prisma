generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ADMIN (login do painel)
//
model Admin {
  id           Int    @id @default(autoincrement())
  email        String @unique
  passwordHash String
}

//
// JOGADORES
//
model Player {
  id       Int     @id @default(autoincrement())
  name     String
  nickname String?
  position String
  photoUrl String?

  // Totais para rankings
  totalGoals   Int   @default(0)
  totalAssists Int   @default(0)
  totalMatches Int   @default(0)
  totalPhotos  Int   @default(0)
  totalRating  Float @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  stats         PlayerStat[]
  weeklyAwards  WeeklyAward[]  @relation("WeeklyBest")
  monthlyAwards MonthlyAward[] @relation("MonthlyCraque")
}

//
// PELADAS / PARTIDAS
//
model Match {
  id          Int      @id @default(autoincrement())
  playedAt    DateTime
  description String?
  winnerTeam  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  stats        PlayerStat[]
  weeklyAwards WeeklyAward[] @relation("WeeklyMatch")
}

//
// ESTATÍSTICA POR JOGADOR EM CADA PELADA
//
model PlayerStat {
  id       Int @id @default(autoincrement())
  playerId Int
  matchId  Int

  present         Boolean @default(false)
  goals           Int     @default(0)
  assists         Int     @default(0)
  rating          Float?
  appearedInPhoto Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  player Player @relation(fields: [playerId], references: [id])
  match  Match  @relation(fields: [matchId], references: [id])

  @@unique([playerId, matchId])
}

//
// CRAQUE + TIME DA SEMANA
//
model WeeklyAward {
  id Int @id @default(autoincrement())

  // Semana (data de início)
  weekStart DateTime @unique

  // Foto do time da semana
  teamPhotoUrl String?

  // Craque da semana
  bestPlayerId Int?
  bestPlayer   Player? @relation("WeeklyBest", fields: [bestPlayerId], references: [id])

  // Pelada / time destaque
  winningMatchId Int?
  winningMatch   Match? @relation("WeeklyMatch", fields: [winningMatchId], references: [id])

  createdAt DateTime @default(now())
}

//
// CRAQUE DO MÊS
//
model MonthlyAward {
  id    Int @id @default(autoincrement())
  month Int
  year  Int

  craqueId Int?
  craque   Player? @relation("MonthlyCraque", fields: [craqueId], references: [id])

  createdAt DateTime @default(now())

  @@unique([month, year])
}
