<section class="space-y-8 animate-fadeIn">
  <header class="space-y-2">
    <h1 class="font-title text-3xl text-horriver-light">Fotos</h1>
    <p class="text-sm text-horriver-gray">
      Registros do time vencedor, craque da semana e craque do mês.
    </p>
  </header>

  <section class="space-y-4">
    <div class="flex items-center justify-between">
      <h2 class="font-title text-xl text-horriver-orange">Linha do tempo</h2>
      <p class="text-[11px] text-horriver-gray">Mais recentes no topo</p>
    </div>

    <% if (!timeline || !timeline.length) { %>
      <p class="text-sm text-horriver-gray">Nenhuma semana cadastrada ainda.</p>
    <% } else { %>
      <div class="space-y-4">
        <% timeline.forEach((item) => { %>
          <% if (item.type === 'weekly') { const award = item.entry.award; const stats = item.entry.stats; %>
            <div class="grid gap-4 md:grid-cols-2">
              <div class="rounded-2xl border border-horriver-border bg-black/40 p-4 space-y-3">
                <h3 class="font-title text-lg text-horriver-light">Craque da semana</h3>
                <% if (!award?.bestPlayer) { %>
                  <p class="text-sm text-horriver-gray">Nenhum craque definido.</p>
                <% } else { %>
                  <div class="flex items-center gap-3">
                    <img
                      src="<%= award.bestPlayer.photoUrl || '/img/logo-64x64.svg' %>"
                      alt="<%= award.bestPlayer.name %>"
                      class="w-16 h-16 rounded-full object-cover border border-horriver-orange/60 bg-horriver-dark"
                    />
                    <div>
                      <p class="text-horriver-light font-semibold"><%= award.bestPlayer.name %></p>
                      <% if (award.bestPlayer.nickname) { %>
                        <p class="text-[11px] text-horriver-gray">"<%= award.bestPlayer.nickname %>"</p>
                      <% } %>
                      <p class="text-[11px] text-horriver-gray">
                        Semana de <%= new Date(award.weekStart).toLocaleDateString('pt-BR', { timeZone: 'America/Sao_Paulo' }) %>
                      </p>
                    </div>
                  </div>
                  <% if (stats) { %>
                    <div class="grid grid-cols-2 gap-2 text-[11px] text-horriver-gray">
                      <div class="rounded-xl border border-horriver-border/60 bg-black/40 px-2 py-2 text-center">
                        <p class="text-horriver-orange font-semibold"><%= stats.goals %></p>
                        <p>Gols</p>
                      </div>
                      <div class="rounded-xl border border-horriver-border/60 bg-black/40 px-2 py-2 text-center">
                        <p class="text-horriver-orange font-semibold"><%= stats.assists %></p>
                        <p>Assist.</p>
                      </div>
                      <div class="rounded-xl border border-horriver-border/60 bg-black/40 px-2 py-2 text-center">
                        <p class="text-horriver-orange font-semibold"><%= stats.photos %></p>
                        <p>Fotos</p>
                      </div>
                      <div class="rounded-xl border border-horriver-border/60 bg-black/40 px-2 py-2 text-center">
                        <p class="text-horriver-orange font-semibold"><%= stats.avgRating.toFixed(2).replace('.', ',') %></p>
                        <p>Nota</p>
                      </div>
                    </div>
                  <% } %>
                <% } %>
              </div>

              <div class="rounded-2xl border border-horriver-border bg-black/40 overflow-hidden">
                <div class="relative aspect-[16/9] bg-black/60">
                  <% if (award?.teamPhotoUrl) { %>
                    <img
                      src="<%= award.teamPhotoUrl %>"
                      alt="Time vencedor"
                      class="absolute inset-0 w-full h-full object-cover"
                    />
                  <% } else { %>
                    <div class="absolute inset-0 flex items-center justify-center text-sm text-horriver-gray">
                      Sem foto do time vencedor
                    </div>
                  <% } %>
                </div>
                <div class="p-3 text-xs text-horriver-gray space-y-1">
                  <p>
                    <span class="text-horriver-light font-semibold">
                      <%= new Date(award.weekStart).toLocaleDateString('pt-BR', { timeZone: 'America/Sao_Paulo' }) %>
                    </span>
                    <% if (award.winningMatch?.description) { %>
                      · <%= award.winningMatch.description %>
                    <% } %>
                  </p>
                  <% if (award.winningMatch?.playedAt) { %>
                    <p>Pelada: <%= new Date(award.winningMatch.playedAt).toLocaleDateString('pt-BR', { timeZone: 'America/Sao_Paulo' }) %></p>
                  <% } %>
                </div>
              </div>
            </div>
          <% } else if (item.type === 'monthly') { const award = item.entry.award; const stats = item.entry.stats; %>
            <section class="rounded-2xl border border-horriver-border bg-black/40 p-4 space-y-3">
              <h2 class="font-title text-xl text-horriver-orange">Craque do mês</h2>
              <% if (!award?.craque) { %>
                <p class="text-sm text-horriver-gray">Nenhum craque do mês definido.</p>
              <% } else { %>
                <div class="flex items-center gap-3">
                  <img
                    src="<%= award.craque.photoUrl || '/img/logo-64x64.svg' %>"
                    alt="<%= award.craque.name %>"
                    class="w-16 h-16 rounded-full object-cover border border-horriver-orange/60 bg-horriver-dark"
                  />
                  <div>
                    <p class="text-horriver-light font-semibold"><%= award.craque.name %></p>
                    <% if (award.craque.nickname) { %>
                      <p class="text-[11px] text-horriver-gray">"<%= award.craque.nickname %>"</p>
                    <% } %>
                    <p class="text-[11px] text-horriver-gray">
                      <%= award.month %>/<%= award.year %>
                    </p>
                  </div>
                </div>
                <% if (stats) { %>
                  <div class="grid grid-cols-2 gap-2 text-[11px] text-horriver-gray">
                    <div class="rounded-xl border border-horriver-border/60 bg-black/40 px-2 py-2 text-center">
                      <p class="text-horriver-orange font-semibold"><%= stats.goals %></p>
                      <p>Gols</p>
                    </div>
                    <div class="rounded-xl border border-horriver-border/60 bg-black/40 px-2 py-2 text-center">
                      <p class="text-horriver-orange font-semibold"><%= stats.assists %></p>
                      <p>Assist.</p>
                    </div>
                    <div class="rounded-xl border border-horriver-border/60 bg-black/40 px-2 py-2 text-center">
                      <p class="text-horriver-orange font-semibold"><%= stats.photos %></p>
                      <p>Fotos</p>
                    </div>
                    <div class="rounded-xl border border-horriver-border/60 bg-black/40 px-2 py-2 text-center">
                      <p class="text-horriver-orange font-semibold"><%= stats.avgRating.toFixed(2).replace('.', ',') %></p>
                      <p>Nota</p>
                    </div>
                  </div>
                <% } %>
              <% } %>
            </section>
          <% } %>
        <% }) %>
      </div>
    <% } %>
  </section>
</section>

