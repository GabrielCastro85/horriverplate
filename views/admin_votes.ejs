<section class="space-y-6 animate-fadeIn">
  <div class="flex items-center justify-between gap-3">
    <div>
      <h1 class="text-xl md:text-2xl font-semibold text-horriver-light">
        Votos da pelada
      </h1>
      <p class="text-xs md:text-sm text-horriver-gray mt-1">
        <span class="text-horriver-orange">
          <%= new Date(match.playedAt).toLocaleDateString('pt-BR') %>
        </span>
        <% if (match.description) { %> - <%= match.description %> <% } %>
      </p>
      <% if (session) { %>
        <p class="text-[11px] text-horriver-gray/80">
          Sessão criada em <%= new Date(session.createdAt).toLocaleString('pt-BR') %>
          <% if (session.expiresAt) { %>
            - expira em <%= new Date(session.expiresAt).toLocaleString('pt-BR') %>
          <% } else { %>
            - sem expiração
          <% } %>
        </p>
      <% } else { %>
        <p class="text-[11px] text-red-400">Nenhuma sessão de votação encontrada.</p>
      <% } %>
    </div>
    <a
      href="/admin/matches/<%= match.id %>"
      class="px-3 py-1 rounded-full border border-horriver-orange text-[11px] md:text-xs text-horriver-orange hover:bg-horriver-orange hover:text-horriver-bg transition"
    >
      Voltar
    </a>
  </div>

  <% if (!session || !ballots.length) { %>
    <p class="text-sm text-horriver-gray">
      Nenhum voto registrado para esta pelada.
    </p>
  <% } else { %>
    <div class="space-y-4">
      <% ballots.forEach((b, idx) => { %>
        <div class="bg-black/40 border border-horriver-border rounded-2xl p-4 space-y-3">
          <div class="flex items-center justify-between text-[12px]">
            <div class="space-y-1">
              <p class="text-horriver-light font-semibold">
                Voto <%= idx + 1 %> - <%= b.token.player?.name || 'Jogador' %>
              </p>
              <% if (b.token.player?.nickname) { %>
                <p class="text-horriver-gray">
                  "<%= b.token.player.nickname %>"
                </p>
              <% } %>
              <p class="text-horriver-gray/80">
                Enviado em <%= new Date(b.createdAt).toLocaleString('pt-BR') %>
              </p>
            </div>
            <div class="text-right text-[11px] text-horriver-orange">
              Token usado em
              <%= b.token.usedAt ? new Date(b.token.usedAt).toLocaleString('pt-BR') : 'não usado' %>
            </div>
          </div>

          <% if (b.bestOverallPlayer) { %>
            <p class="text-[12px] text-horriver-light">
              Melhor da pelada: <span class="text-horriver-orange font-semibold"><%= b.bestOverallPlayer.name %></span>
              <% if (b.bestOverallPlayer.nickname) { %>
                (<%= b.bestOverallPlayer.nickname %>)
              <% } %>
            </p>
          <% } %>

          <div class="grid md:grid-cols-2 gap-3 text-[12px]">
            <% const grouped = {}; (b.rankings || []).forEach((r) => {
              const pos = r.position || 'Outros';
              if (!grouped[pos]) grouped[pos] = [];
              grouped[pos].push(r);
            });
            Object.entries(grouped).forEach(([pos, ranks]) => { %>
              <div class="border border-horriver-border/60 rounded-xl p-3 bg-black/30">
                <p class="text-horriver-orange font-semibold mb-2"><%= pos %></p>
                <ul class="space-y-1">
                  <% ranks.sort((a,b)=>a.rank-b.rank).forEach((r) => { %>
                    <li class="flex items-center justify-between">
                      <span class="text-horriver-light"><%= r.rank %>. <%= r.player?.name || 'Jogador' %></span>
                      <% if (r.player?.nickname) { %>
                        <span class="text-horriver-gray">("<%= r.player.nickname %>")</span>
                      <% } %>
                    </li>
                  <% }) %>
                </ul>
              </div>
            <% }); %>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>
