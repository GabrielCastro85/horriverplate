<section class="max-w-6xl mx-auto py-10 px-4 space-y-8">
  <header class="space-y-2">
    <h1 class="text-3xl font-title text-horriver-light">Hall de Conquistas</h1>
    <p class="text-sm text-horriver-gray">Percentual de jogadores que desbloquearam cada conquista.</p>
  </header>

  <% Object.keys(grouped).sort().forEach(cat => { const list = grouped[cat]; %>
    <div class="space-y-3">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-horriver-light capitalize"><%= cat %></h2>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
        <% list.forEach(item => { 
             const ach = item.achievement;
             const percent = item.percent || 0;
        %>
          <div class="flex flex-col items-center gap-2">
            <%- include('partials/badge', {
              title: ach.title,
              category: ach.category,
              rarity: ach.rarity,
              unlocked: percent > 0,
              progressCurrent: item.unlockedCount || 0,
              progressTarget: ach.targetValue || null,
              symbol: ach.symbol || null,
              isNumeric: ach.isNumeric,
              description: ach.description
            }) %>
            <p class="text-[11px] text-horriver-gray"><%= percent %>% dos jogadores</p>
          </div>
        <% }) %>
      </div>
    </div>
  <% }) %>
</section>
